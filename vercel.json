{
  "version": 2,
  "builds": [
    {
      "src": "admin/package.json",
      "use": "@vercel/next",
      "config": {
        "rootDirectory": "admin"
      }
    }
  ],
  "routes": [
    {
      "src": "/admin(/.*)?",
      "dest": "/admin$1"
    },
    {
      "src": "/verify-email",
      "dest": "/website/verify-email.html"
    },
    {
      "src": "/reset-password",
      "dest": "/website/reset-password.html"
    },
    {
      "src": "/(.*\\.(css|js|jpg|jpeg|png|gif|svg|ico|woff|woff2|ttf|eot|mp4|webm|mp3|wav|ogg))",
      "dest": "/website/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/website/$1"
    }
  ]
}
